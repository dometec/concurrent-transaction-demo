[mysqld]

innodb-lock-wait-timeout=5

# Log General
general_log = 1
general_log_file = /var/log/mysql_general.log

# Log Error
log_error = /var/log/mysql_error.log

# Log Slow
slow_query_log = 1
slow_query_log_file = /var/log/mysql_slow_query.log
long_query_time = 2

log_queries_not_using_indexes = 1

# https://dev.mysql.com/doc/refman/8.0/en/server-options.html#option_mysqld_transaction-isolation
transaction_isolation=READ-UNCOMMITTED